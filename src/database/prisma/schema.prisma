generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Source {
  id       Int     @id @default(autoincrement())
  groupId  Int?
  name     String
  content  String
  fileUrl  String?
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  group Group? @relation(fields: [groupId], references: [id])
}

model Group {
  id        Int    @id @default(autoincrement())
  name      String
  colorCode String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  sources Source[]
}
