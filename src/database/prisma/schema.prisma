generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  isActive Boolean @default(true)
  role     Role

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model ApiKey {
  id       Int      @id @default(autoincrement())
  name     String
  key      String   @unique
  scopes   String[]
  isActive Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
