{
    "compilerOptions": {
        "target": "es2023",
        "module": "commonjs",
        "isolatedModules": true,
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src"]
}
