generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum SourceStatus {
  PENDING
  FAILED
  DONE
}

enum RoleCode {
  ADMIN
}

model Preset {
  id                 Int    @id @default(autoincrement())
  name               String
  code               String @unique
  chunkSplitSize     Int
  chunkSplitOverlap  Int
  topK               Int
  topN               Int
  minSimilarityScore Float
  maxResponseTokens  Int
  rerankModel        String
  responsesModel     String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Source {
  id           Int          @id @default(autoincrement())
  groupId      Int?
  name         String
  content      String
  status       SourceStatus @default(PENDING)
  statusReason String?
  jobId        String?      @unique
  fileUrl      String?
  metadata     Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  group            Group?            @relation(fields: [groupId], references: [id])
  searchLogSources SearchLogSource[]
}

model Group {
  id        Int    @id @default(autoincrement())
  name      String
  colorCode String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  sources Source[]
}

model SearchLog {
  id       Int      @id @default(autoincrement())
  question String
  answer   String
  rerank   Boolean
  tone     String
  chunkIds String[] @default([])
  day      DateTime @db.Date

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  sources SearchLogSource[]
}

model SearchLogSource {
  id          Int @id @default(autoincrement())
  searchLogId Int
  sourceId    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  searchLog SearchLog @relation(fields: [searchLogId], references: [id], onDelete: Cascade)
  source    Source    @relation(fields: [sourceId], references: [id], onDelete: Cascade)
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     RoleCode

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
