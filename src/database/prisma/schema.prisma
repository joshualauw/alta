generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SourceStatus {
  PENDING
  FAILED
  DONE
}

model Preset {
  id                 Int    @id @default(autoincrement())
  name               String
  code               String @unique
  chunkSplitSize     Int
  chunkSplitOverlap  Int
  topK               Int
  topN               Int
  minSimilarityScore Float
  maxResponseTokens  Int
  rerankModel        String
  responsesModel     String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Source {
  id           Int          @id @default(autoincrement())
  groupId      Int?
  name         String
  content      String
  status       SourceStatus @default(PENDING)
  statusReason String?
  jobId        String?      @unique
  fileUrl      String?
  metadata     Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  group Group? @relation(fields: [groupId], references: [id])
}

model Group {
  id        Int    @id @default(autoincrement())
  name      String
  colorCode String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  sources Source[]
}

model SearchLog {
  id                 Int     @id @default(autoincrement())
  question           String
  answer             String
  responseTimeMs     Float
  searchOptions      Json
  isRerank           Boolean
  tone               String
  metadataFilters    Json?
  readUnitCost       Int
  rerankUnitCost     Int?
  embeddingTokenCost Int?
  chunksRetrieved    Json[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
